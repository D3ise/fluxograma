<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fluxograma.ClienteEditar"
             Title="Editar perfil">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Editar foto" Grid.Row="0" HorizontalTextAlignment="Center" />
        <Image Source="user.png" Grid.Row="1" HorizontalOptions="Center" />

        <Label Text="Nome do usuário:" Grid.Row="2" />
        <Entry x:Name="entryNome" Grid.Row="2" Grid.Column="1" />

        <Label Text="Telefone:" Grid.Row="3" />
        <Entry x:Name="entryTelefone" Grid.Row="3" Grid.Column="1" Keyboard="Telephone" />

        <Label Text="Endereço:" Grid.Row="4" />
        <Entry x:Name="entryEndereco" Grid.Row="4" Grid.Column="1" />

        <Label Text="Email:" Grid.Row="5" />
        <Entry x:Name="entryEmail" Grid.Row="5" Grid.Column="1" Keyboard="Email" />

        <Button Text="Salvar" Grid.Row="6" HorizontalOptions="Center" Clicked="Button_Clicked" />
    </Grid>
</ContentPage>
